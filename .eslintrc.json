{
  "plugins": [
    "chai-expect"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "extends": "eslint:recommended",
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "rules": {
    "indent": ["error", 2],
    "quotes": ["error", "single"]
  },
  "globals": {
    "expect": true // workaround as karma makes chai available globally
  }
}
